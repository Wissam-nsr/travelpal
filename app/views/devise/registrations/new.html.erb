<div class='container-stef'>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }, :label_html => { :class => 'form_style' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email", style:'background: none' }%>
    <%= f.input :avatar, as: :file %>
    <%= f.input :username,
                required: true,
                input_html: { style:'background: none' }%>
    <%= f.input :address,
                input_html: { style:'background: none' }%>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password", style:'background: none' } %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password", style:'background: none' } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up", class: "btn btn-secondary" %>
  </div>
<% end %>
</div>
