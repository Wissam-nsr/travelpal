<div class="feed_top">
  <% unless current_user.address.nil? %>
    <h3><%= current_user.geocoder_object["address"]["city_district"] %></h3>
  <% end %>
  <p> <strong><%= users.length - 1 %> travelpals</strong> around you </p>
    <div class="dropdown feed-top-dropdown">
      <%= form_with url: "/home", method: :get, data: {controller: "dropdown-radius", dropdown_radius_params_value: params[:radius] } do |form| %>
        <%= form.select :radius, [0, 5, 10, 25, 50], { prompt: "select"}, autocomplete: "off", data: { dropdown_radius_target: "radius", action: "change->dropdown-radius#fireForm"} %>
      <% end %>
    </div>
</div>
